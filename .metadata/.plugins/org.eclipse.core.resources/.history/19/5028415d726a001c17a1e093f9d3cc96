package topologyApi;

import java.io.FileReader;
import java.util.HashMap;

import com.github.cliftonlabs.json_simple.JsonObject;

public abstract class Component implements LoadAndStore{
	private String mType;
	private String mId;
	public Component(String type, String id) {
		this.setType(type);
		this.setId(id);
	}
	public String getType() {
		return mType;
	}
	public void setType(String mType) {
		this.mType = mType;
	}
	public String getId() {
		return mId;
	}
	public void setId(String mId) {
		this.mId = mId;
	}
	public void print() {
		System.out.println("Type: " + mType + " " + "Id: " + mId);
	}
	
	public abstract Component readFile(FileReader fileName);
	public abstract void writeFile(FileReader fileName);
	public abstract Component readJson(JsonObject ob);
	public abstract void writeJson(JsonObject ob);
}
